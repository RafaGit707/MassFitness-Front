<!--                    android:layout_weight="1"-->
<!--                    android:src="@drawable/ic_phone"-->
<!--                    android:contentDescription="@string/phone"-->
<!--                    android:tint="#00FFFF"-->
<!--                    android:layout_margin="8dp" />-->

<!--                <ImageView-->
